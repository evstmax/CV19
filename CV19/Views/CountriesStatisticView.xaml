<UserControl x:Class="CV19.Views.CountriesStatisticView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CV19.Views"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GridSplitter Width="3" Background="Transparent"/>
        <GroupBox Grid.Column="0" Header="Список стран">
            <ListBox></ListBox>
        </GroupBox>
        <GroupBox Grid.Column="1" Header ="Информация">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <GridSplitter VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="3" Background="Transparent"></GridSplitter>


            </Grid>
        </GroupBox>
        
    </Grid>
</UserControl>
